<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset name="details" label="COM_MYMERCATOS_MYMERCATO_TAB_DETAILS">

		<field
			name="id"
			type="number"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			class="readonly"
			readonly="true"
		/>

		<field
			name="title"
			type="text"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_TITLE"
			size="40"
			required="true"
		 />

		<field
			name="description"
			type="textarea"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_DESCRIPTION"
			rows="5"
			cols="40"
			required="true"
		 />

		<field
			name="costo"
			type="decimel"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_COSTO"
			required="true"
		 />

		<field
			name="published"
			type="list"
			label="JSTATUS"
			default="1"
			id="published"
			class="custom-select-color-state"
			size="1"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>

	</fieldset>
	
	<fieldset name="options" label="COM_MYMERCATOS_MYMERCATO_TAB_OPTIONS">
		
		<field name="marca"
			type="text"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_MARCA"
		/>
		

		<field name="telefono"
			type="text"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_TELEFONO"
			size="40"
		/>




		<field name="tipo"
			type="list"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_TIPO"
			default="0"
			size="1"
			>
			<option value="Escursionismo">Escursionismo</option>
			<option value="Sci">Sci</option>
			 <option value="Varie">Varie</option>
		</field>




		<field name="tuaemail"
			type="text"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_TUAEMAIL"
           size="40"
			/>


		<field name="nome"
			type="text"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_NOME"
			size="40"
			/>

	</fieldset>

	<fieldset name="picture" label="COM_MYMERCATOS_MYMERCATO_TAB_PICTURE">

		<field
			name="picture"
			type="media"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_PICTURE_URL"
		/>

		<field
			name="width"
			type="number"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_PICTURE_WIDTH"
			default="0"
		 />

		<field
			name="height"
			type="number"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_PICTURE_HEIGHT"
			default="0"
		 />

		<field
			name="alt"
			type="text"
			label="COM_MYMERCATOS_MYMERCATO_LABEL_PICTURE_ALT"
			size="40"
		 />
	</fieldset>

</form>
